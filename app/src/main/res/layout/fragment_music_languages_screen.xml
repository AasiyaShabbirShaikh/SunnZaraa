<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.MusicLanguagesScreenFragment">
    
    <TextView
        android:id="@+id/choose_language_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_language"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/choose_language_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        
        <androidx.cardview.widget.CardView
            android:id="@+id/english_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="7dp"
            app:cardCornerRadius="10dp"
            >
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/english"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/magenta"
                />
            
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/hindi_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hindi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/orange"
                />

        </androidx.cardview.widget.CardView>
        
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/marathi_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="7dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/marathi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/purple"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/punjabi_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/punjabi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/paleyellow"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/gujarati_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="7dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/gujarati"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/darkblue"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/south_cardview"
            android:layout_width="170dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/south"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/teal"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>