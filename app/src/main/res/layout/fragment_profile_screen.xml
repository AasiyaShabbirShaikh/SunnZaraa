<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.profile.ProfileScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <LinearLayout
            android:id="@+id/img_layout"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#C1C1C1"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_camera_icon"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_here"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_layout"
            />

        <TextView
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/username_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/personal_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/edit_text"
            />

        <LinearLayout
            android:id="@+id/birthdate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/personal_details_text"
            >

            <TextView
                android:id="@+id/birthdate_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/birthdate"
                android:textSize="16sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/birthdate_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/birthdate_here"
                android:textSize="16sp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_no_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/birthdate_layout"
            >

            <TextView
                android:id="@+id/mobile_no_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mobile_no"
                android:textSize="16sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/mobile_no_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mobile_no_here"
                android:textSize="16sp"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile_no_layout"
            >

            <TextView
                android:id="@+id/email_id_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email_id"
                android:textSize="16sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/email_id_here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email_id_here"
                android:textSize="16sp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/email_id_layout"
            />

        <LinearLayout
            android:id="@+id/favourites_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/content_text"
            >

            <ImageView
                android:id="@+id/favourite_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_favourites_icon"
                />

            <TextView
                android:id="@+id/favourites_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/favourites"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_weight="4"
                />

            <ImageView
                android:id="@+id/favourites_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward_arrow_icon"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/library_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/favourites_layout"
            >

            <ImageView
                android:id="@+id/library_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_library_icon"
                />

            <TextView
                android:id="@+id/library_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/library"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_weight="4"
                />

            <ImageView
                android:id="@+id/library_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward_arrow_icon"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/actions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/library_layout"
            />

        <LinearLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/actions_text"
            >

            <ImageView
                android:id="@+id/logout_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_logout_icon"
                />

            <TextView
                android:id="@+id/logout_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_weight="4"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>