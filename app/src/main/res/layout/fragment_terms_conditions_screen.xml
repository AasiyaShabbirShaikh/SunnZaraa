<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.registration.TermsConditionsScreenFragment">

    <ImageView
        android:id="@+id/terms_applogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_musicana_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/terms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/terms_and_conditions"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terms_applogo" />


    <LinearLayout
        android:id="@+id/terms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/terms_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/tick_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_asset_icon" />

            <TextView
                android:id="@+id/term_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/term_one"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/tick_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_asset_icon" />

            <TextView
                android:id="@+id/term_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/term_two"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/tick_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_asset_icon" />

            <TextView
                android:id="@+id/term_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/term_three"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/green"
        android:text="@string/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terms_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>